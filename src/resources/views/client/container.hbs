<h3>Giỏ hàng</h3>

<table class="table table-striped table-dark">
            <thead class="thead-dark">
                <tr>

                    <th scope="col">STT</th>
                    <th scope="col">Tiêu đề</th>
                    <th scope="col">Số lượng</th>
                    
                    <th scope="col">Ngày phát hành</th>
                    <th scope="col">Số trang</th>
                    <th scope="col">Xem chi tiết</th>
                    <th scope="col">Tùy chọn</th>
                </tr>
            </thead>

            <tbody>
                {{#each book}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.quantity}}</td>
                    
                    <td>{{formatDate @this.releaseDate}}</td> 
                    
                    <td>{{this.numberOfPages}}</td>
                    
                    <td>       
                                     
                       
                            
                            <a href="/book/list/client/detail/{{this.bookId}}" type="submit" class="btn btn-primary">Xem</a>
                                                
                    </td> 
                    <td>
                        <a href="button" class="btn btn-link" data-id="{{this._id}}" data-toggle="modal"
                        data-target="#delete">Xóa</a>
                    </td> 
                </tr>
                
                {{/each}}
            </tbody>


</table>




<div id="delete" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc muốn xóa Item</p>
            </div>
            <div class="modal-footer">
                <a type="button" class="btn btn-primary">Đồng ý</a>
                <a type="button" class="btn btn-secondary" data-dismiss="modal">Close</a>
            </div>
        </div>
    </div>
</div>

{{!-- delete form--}}
<form method="post" name="delete-course-form" ></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var courseId;
        var deleteForm = document.forms['delete-course-form']
        var bt = document.getElementById('delete')

        $('#delete').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
            console.log('id', courseId)
        
        })

        
        bt.onclick = function() {
            
            deleteForm.action = '/client/container/delete/'+courseId + '?_method=DELETE';
            deleteForm.submit()
        }
    })
    
</script>