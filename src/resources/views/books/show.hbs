<div class="mt-4">
    <div class="column">
        {{#each book}}
        <div>
            <img style="height: 160px;" class="rounded float-left" src="{{this.path}}" alt="Card image cap">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>