<div class="container-fluid mt-4">
    <form id="form-1" method="POST" action="/book/insert" enctype="multipart/form-data" class="form-row" >
        <div class="text-form">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">Tiêu đề</label>
                    <input required minlength="4" name="name" type="text" class="form-control" id="">
                </div>
                <div class="form-group col-md-6">
                    <label for="author">Tác giả</label>
                    <input required minlength="4" name="author" type="text" class="form-control" id="">
                </div>
            </div>
            <div class="form-group">
                <label for="description">Mô tả về sách</label>
                <textarea required minlength="6" name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="releaseDate">Ngày phát hành</label>
                    <input required pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))" name="releaseDate" type="date" class="form-control" id="">
                </div>
                <div class="form-group col-md-6">
                    <label for="numberOfPages">Số trang</label>
                    <input required pattern="[-+]?[0-9]" name="numberOfPages" type="number" class="form-control" id="">
                </div>
            </div>
            <div class="form-row">
                <label for="type">Thể loại</label>
                <select name="type" class="form-control">
                    <option>Truyện</option>
                    <option>Tiểu thuyết</option>
                    <option>Khoa học</option>
                    <option>Toán học</option>
                    <option>Khác</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary mt-4">Xác nhận</button>
        </div>

        <div class="d-flex flex-column ml-4 mt-4">
            
            
                <input onchange="readURL(this);" required type="file" name="path" id="file" class="inputfile" placeholder="Upload" />
                <img id="blah" src="#" alt="Ảnh sách">
            
        </div>
    </form>
</div>


<script>
    function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#blah')
                        .attr('src', e.target.result)
                        .width(150)
                        .height(200);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
</script>



