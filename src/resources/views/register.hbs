<div class="login mt-4">
    <h1>Register</h1>
    <form action="/login/create/auth" method="post">


        
        <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input minlength="4" type="text" name="username" placeholder="Username" id="username" required>
            
            <small id="emailHelp" style="color: red;" class="form-text text-muted">{{validateUsername}}</small>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input minlength="4" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" type="email" name="email"
                placeholder="email" id="email" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input minlength="4" type="password" name="password" placeholder="Password" id="password" required>
        </div>
        <input type="submit" value="Register">
    </form>
    <p class="mt-4">Nếu bạn dã có tài khoản</p>
    <a href="/login" class="btn btn-primary" id="login" role="button">Đăng nhập</a>
</div>